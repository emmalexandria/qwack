{
  "compilerOptions": {
    "plugins": [{"name": "ts-lit-plugin"}],
    "target": "es2021",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es2021", "dom"],
    "declaration": true,
    "declarationDir": "types",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,

    "rootDir": "src",
    "outDir": "dist"
  
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "stories"]
}
